# CodeIgniter 4 - Redirect to Public Folder
# This file is used when the project is in the document root
# and requests need to be redirected to the public folder

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# Deny access to hidden files
<FilesMatch "^\.">
    Require all denied
    Satisfy All
</FilesMatch>
