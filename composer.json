{
  "name": "btafoya/openclient",
  "description": "Open source client & agency management platform (Taskip-style) built with CodeIgniter 4, PostgreSQL, and TailwindCSS.",
  "type": "project",
  "require": {
    "php": "^8.2",
    "codeigniter4/framework": "^4.5",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pgsql": "*",
    "dompdf/dompdf": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "fakerphp/faker": "^1.23",
    "mockery/mockery": "^1.6",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Config\\": "app/Config/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage/",
    "analyse": "phpstan analyze --memory-limit 512M",
    "analyse:baseline": "phpstan analyze --memory-limit 512M --generate-baseline"
  }
}
